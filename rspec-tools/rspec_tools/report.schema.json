{
    "$schema": "http://json-schema.org/draft-06/schema#",
    "$ref": "#/definitions/Report",
    "title": "Sonar report description format",
    "definitions": {
        "Report": {
            "type": "object",
            "additionalProperties": false,
            "properties": {
                "name": {
                    "type": "string"
                },
                "description": {
                    "type": "string"
                },
                "classification": {
                    "type": "string",
                    "enum": [
                        "ACCESSIBILITY",
                        "SECURITY"
                    ]
                },
                "urls": {
                    "type": "array",
                    "items": {
                        "$ref": "#/definitions/URL"
                    }
                },
                "taxonomy": {
                    "$ref": "#/definitions/Taxonomy"
                },
                "levels": {
                    "$ref": "#/definitions/Levels"
                },
                "versions": {
                    "type": "array",
                    "items": {
                        "$ref": "#/definitions/Version"
                    }
                }
            },
            "required": [
                "name",
                "taxonomy",
                "versions"
            ],
            "title": "Report"
        },
        "Levels": {
            "type": "object",
            "additionalProperties": false,
            "properties": {
                "name": {
                    "type": "string"
                },
                "description": {
                    "type": "string"
                },
                "inclusive": {
                    "type": "boolean"
                },
                "values": {
                    "type": "array",
                    "items": {
                        "$ref": "#/definitions/Value"
                    }
                }
            },
            "required": [
                "description",
                "inclusive",
                "name",
                "values"
            ],
            "title": "Levels"
        },
        "Value": {
            "type": "object",
            "additionalProperties": false,
            "properties": {
                "name": {
                    "type": "string"
                },
                "description": {
                    "type": "string"
                }
            },
            "required": [
                "description",
                "name"
            ],
            "title": "Value"
        },
        "Taxonomy": {
            "type": "object",
            "additionalProperties": false,
            "properties": {
                "category": {
                    "type": "string"
                },
                "subcategory": {
                    "type": "string"
                },
                "subsubcategory": {
                    "type": "string"
                }
            },
            "required": [
                "category"
            ],
            "title": "Taxonomy"
        },
        "Version": {
            "type": "object",
            "additionalProperties": false,
            "properties": {
                "name": {
                    "type": "string"
                },
                "description": {
                    "type": "string"
                },
                "urls": {
                    "type": "array",
                    "items": {
                        "$ref": "#/definitions/URL"
                    }
                },
                "categories": {
                    "type": "array",
                    "items": {
                        "$ref": "#/definitions/Category"
                    }
                }
            },
            "required": [
                "name"
            ],
            "title": "Version"
        },
        "Category": {
            "type": "object",
            "additionalProperties": false,
            "properties": {
                "name": {
                    "type": "string"
                },
                "description": {
                    "type": "string"
                },
                "level": {
                    "type": "string"
                },
                "urls": {
                    "type": "array",
                    "items": {
                        "$ref": "#/definitions/URL"
                    }
                },
                "rules": {
                    "type": "array",
                    "items": {
                        "type": "string"
                    }
                },
                "subcategories": {
                    "type": "array",
                    "items": {
                        "$ref": "#/definitions/Subcategory"
                    }
                }
            },
            "required": [
                "name"
            ],
            "title": "Category"
        },
        "Subcategory": {
            "type": "object",
            "additionalProperties": false,
            "properties": {
                "name": {
                    "type": "string"
                },
                "description": {
                    "type": "string"
                },
                "level": {
                    "type": "string"
                },
                "urls": {
                    "type": "array",
                    "items": {
                        "$ref": "#/definitions/URL"
                    }
                },
                "rules": {
                    "type": "array",
                    "items": {
                        "type": "string"
                    }
                },
                "subsubcategories": {
                    "type": "array",
                    "items": {
                        "$ref": "#/definitions/Subsubcategory"
                    }
                }
            },
            "required": [
                "name"
            ],
            "title": "Subcategory"
        },
        "Subsubcategory": {
            "type": "object",
            "additionalProperties": false,
            "properties": {
                "name": {
                    "type": "string"
                },
                "description": {
                    "type": "string"
                },
                "level": {
                    "type": "string"
                },
                "urls": {
                    "type": "array",
                    "items": {
                        "$ref": "#/definitions/URL"
                    }
                },
                "rules": {
                    "type": "array",
                    "items": {
                        "type": "string"
                    }
                }
            },
            "required": [
                "name"
            ],
            "title": "Subsubcategory"
        },
        "URL": {
            "type": "object",
            "additionalProperties": false,
            "properties": {
                "name": {
                    "type": "string"
                },
                "url": {
                    "type": "string",
                    "format": "uri",
                    "qt-uri-protocols": [
                        "https"
                    ]
                }
            },
            "required": [
                "url"
            ],
            "title": "URL"
        }
    }
}